{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "arrow-parens": ["error", "as-needed"],
    "max-len": ["error", { "code": 100 }],
    "comma-dangle": 0,
    "linebreak-style": 0,
    "implicit-arrow-linebreak": 0,
    "react/jsx-filename-extension": 0
  },
  "plugins": ["jest"]
}
